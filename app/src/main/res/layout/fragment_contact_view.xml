<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cucsijuan.contactmanager.ContactViewFragment">

    <LinearLayout
        android:id="@+id/layout_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="7pt"/>

        <TextView
            android:id="@+id/view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:text="12333333"
            android:textSize="8pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombre_de_persona"
            android:text="Last Name"
            android:textSize="7pt"/>
        <TextView
            android:id="@+id/view_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:text="12333333"
            android:textSize="8pt"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_menu_mail"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:text="Email Address"
            android:textSize="7pt"/>

        <TextView
            android:id="@+id/view_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:text="12333333"
            android:textSize="8pt"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_menu_phone"
            android:drawablePadding="5dp"
            android:layout_marginBottom="0dp"
            android:text="Phone number"
            android:gravity="center_vertical"
            android:textSize="7pt"/>

        <TextView
            android:id="@+id/view_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:text="12333333"
            android:textSize="8pt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_menu_location"
            android:drawablePadding="5dp"
            android:layout_marginBottom="0dp"
            android:text="Address"
            android:gravity="center_vertical"
            android:textSize="7pt"/>

        <TextView
            android:id="@+id/view_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:text="12333333"
            android:textSize="8pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_menu_camera"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Contact Picture"
            android:textSize="7pt" />

        <ImageView
            android:id="@+id/view_image_contact"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@android:drawable/sym_def_app_icon"/>

    </LinearLayout>

</FrameLayout>
